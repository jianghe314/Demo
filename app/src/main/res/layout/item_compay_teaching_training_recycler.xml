<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/compay_teaching_training_container"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/compay_teaching_training_choice"
                android:src="@mipmap/student_test_choice1"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_weight="12"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/compay_teaching_trainig_name"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/compay_teaching_training_pickUp"
                    android:textColor="@color/textColor_whit"
                    android:layout_centerVertical="true"
                    android:background="@drawable/text_backgroundaque"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/compay_teaching_trainig_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/compay_teaching_training_price"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/price_background"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="80dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/compay_teaching_training_time"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/compay_teaching_training_bg"
            android:background="@color/colorPrimary"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/compay_teaching_training_status"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/textColor_whit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>

</LinearLayout>