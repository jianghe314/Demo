            <RelativeLayout
                android:layout_marginStart="10dp"
                android:background="@color/textColor_whit"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/compay_teaching_hour_detail_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/compay_learnH_school"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="150dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="10dp"
                android:background="@color/background_color"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/compay_teaching_hour_detail_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/compay_learnH_Id"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="150dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="10dp"
                android:background="@color/textColor_whit"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/compay_teaching_hour_detail_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/compay_learnH_code"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="150dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="10dp"
