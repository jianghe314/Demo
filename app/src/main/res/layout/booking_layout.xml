<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="50"
    tools:context="com.kangzhan.student.Student.Student_MainActivity"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/book_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recorded"
            android:textColor="@color/textColor"
            android:textSize="14sp" />
        <TextView
            android:layout_toEndOf="@+id/book_tv1"
            android:layout_centerVertical="true"
            android:id="@+id/booking_number"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="42"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.holenzhou.pullrecyclerview.PullRecyclerView
            android:id="@+id/recorded_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.holenzhou.pullrecyclerview.PullRecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="5.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/get_more"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:background="@drawable/btnstyle"
            android:text="@string/recorded_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>