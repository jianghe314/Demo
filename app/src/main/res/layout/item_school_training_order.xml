<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <RelativeLayout
            android:visibility="gone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_school_training_order_choice"
                android:layout_centerInParent="true"
                android:src="@mipmap/student_test_choice"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_school_training_order_sex"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/girl"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/item_school_training_order_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/item_school_training_order_sex"
                    android:text="张娜娜"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_training_order_pickUp"
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/text_backgroundaque"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/item_school_training_order_name"
                    android:layout_centerVertical="true"
                    android:text="要接送"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_training_order_price"
                    android:textColor="@color/textColor_whit"
                    android:gravity="center"
                    android:text="￥150.00元"
                    android:background="@drawable/price_background"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/item_school_training_order_rq"
                    android:text="接单日期："
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_training_order_time"
                    android:layout_toEndOf="@+id/item_school_training_order_rq"
                    android:text="2017-06-25"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/item_school_training_order_kc"
                    android:text="课程："
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="17-06-25 10:00-12:00  张教练  2课时"
                    android:id="@+id/item_school_training_order_lesson"
                    android:layout_toEndOf="@+id/item_school_training_order_kc"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
</LinearLayout>