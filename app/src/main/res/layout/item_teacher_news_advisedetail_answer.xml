<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="10dp">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/teacher_news_advisedetail_pp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/teacher_news_advisedetail_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_below="@+id/teacher_news_advisedetail_pp"
            android:layout_marginTop="10dp"
            android:id="@+id/teacher_news_advisedetail_answertv2"
            android:layout_marginLeft="10dp"
            android:text="@string/teacher_news_advisedetail_problem_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/teacher_news_advisedetail_problemAnswer"
            android:lineSpacingMultiplier="1.2"
            android:layout_margin="10dp"
            android:layout_below="@+id/teacher_news_advisedetail_answertv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>