<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kangzhan.student.CompayManage.InfoManage.SchoolDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/compay_schooldetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:background="@color/textColor_whit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_n"
            android:layout_marginStart="10dp"
            android:text="驾校名称"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_n"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_a"
            android:layout_marginStart="10dp"
            android:text="驾校所在地"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_a"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_t"
            android:layout_marginStart="10dp"
            android:text="驾校类别"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_t"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_p"
            android:layout_marginStart="10dp"
            android:text="联系人"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_p"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_ph"
            android:layout_marginStart="10dp"
            android:text="联系电话"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_ph"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_sc"
            android:layout_marginStart="10dp"
            android:text="跨驾校预约"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_sc"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_compay_school_detail_tea"
            android:layout_marginStart="10dp"
            android:text="跨教练预约"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/item_compay_school_detail_tea"
            android:text="猎鹰驾校"
            android:id="@+id/item_compay_school_detail_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
