<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#eae9e9"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/advise_line1"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="合计"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:id="@+id/notice_Num"
            android:textColor="@color/textColor_red"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/advise_line1"
            android:layout_alignBottom="@+id/advise_line1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="85dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:text="条投诉建议"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/advise_line1"
            android:layout_alignBottom="@+id/advise_line1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <com.holenzhou.pullrecyclerview.PullRecyclerView
        android:id="@+id/advise_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.holenzhou.pullrecyclerview.PullRecyclerView>

</LinearLayout>