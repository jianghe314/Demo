<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="81dp">
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:id="@+id/school_edu_test_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/school_edu_test_choice"
                android:layout_centerInParent="true"
                android:src="@mipmap/student_test_choice"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="4dp"
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_school_edu_test_sex"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/girl"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/item_school_edu_test_name"
                    android:layout_marginStart="5dp"
                    android:text="张娜娜"
                    android:layout_toEndOf="@+id/item_school_edu_test_sex"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/item_school_edu_test_time"
                    android:layout_centerVertical="true"
                    android:text="考试日期：2017-04-18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_edu_test_carType"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/item_school_edu_test_time"
                    android:layout_centerVertical="true"
                    android:text="车型：C1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_school_edu_test_gradeM"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/test_mark"
                    android:layout_width="65dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/item_school_edu_test_subject"
                    android:text="科目三"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/item_school_edu_test_gradeM"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
</LinearLayout>