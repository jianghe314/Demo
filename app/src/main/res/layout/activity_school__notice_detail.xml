<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kangzhan.student.School.Notice.School_NoticeDetail">

    <android.support.v7.widget.Toolbar
        android:id="@+id/school_notice_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_margin="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="20dp">
                   <TextView
                       android:id="@+id/school_notice_obj"
                       android:layout_centerVertical="true"
                       android:text="@string/teacher_send_object"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <com.kangzhan.student.mUI.mLableLayout
                       android:layout_below="@+id/school_notice_obj"
                       android:id="@+id/school_news_sendNotice_toMan"
                       android:layout_marginTop="5dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginLeft="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </com.kangzhan.student.mUI.mLableLayout>
               </RelativeLayout>
               <View
                   android:background="@color/color_line"
                   android:layout_width="match_parent"
                   android:layout_height="0.7dp"/>
               <RelativeLayout
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/school_notice_d"
                       android:text="@string/teacher_title_send"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:id="@+id/school_notice_detail_title"
                       android:layout_alignBaseline="@+id/school_notice_d"
                       android:layout_toEndOf="@+id/school_notice_d"
                       android:textColor="@color/textColor"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
               <View
                   android:background="@color/color_line"
                   android:layout_width="match_parent"
                   android:layout_height="0.7dp"/>
               <RelativeLayout
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/school_notice_s"
                       android:text="@string/teacher_stastu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:id="@+id/school_notice_detail_stastu"
                       android:layout_alignBaseline="@+id/school_notice_s"
                       android:layout_toEndOf="@+id/school_notice_s"
                       android:textColor="@color/colorPrimary"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
               <View
                   android:background="@color/color_line"
                   android:layout_width="match_parent"
                   android:layout_height="0.7dp"/>
               <RelativeLayout
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/school_notice_recT"
                       android:text="@string/teacher_record_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:id="@+id/school_notice_detail_recordTime"
                       android:layout_alignBaseline="@+id/school_notice_recT"
                       android:layout_toEndOf="@+id/school_notice_recT"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
               <View
                   android:background="@color/color_line"
                   android:layout_width="match_parent"
                   android:layout_height="0.7dp"/>
               <RelativeLayout
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/school_notice_sendT"
                       android:text="@string/teacher_sendT"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:id="@+id/school_notice_detail_sendT"
                       android:layout_alignBaseline="@+id/school_notice_sendT"
                       android:layout_toEndOf="@+id/school_notice_sendT"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
               <View
                   android:background="@color/color_line"
                   android:layout_width="match_parent"
                   android:layout_height="0.7dp"/>
               <RelativeLayout
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/school_notice_co"
                       android:text="@string/teacher_send_content"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:lineSpacingMultiplier="1.3"
                       android:layout_marginTop="5dp"
                       android:id="@+id/school_notice_detail_content"
                       android:layout_below="@+id/school_notice_co"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
           </LinearLayout>

        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
