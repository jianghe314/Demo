<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kangzhan.student.HeadView.HeadViewActivity">

    <FrameLayout
        android:layout_above="@+id/home_line"
        android:id="@+id/home_viewPager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </FrameLayout>
    <View
        android:id="@+id/home_line"
        android:layout_above="@+id/nav_container"
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/nav_container"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:id="@+id/index_0"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_iv0"
                android:layout_gravity="center"
                android:src="@mipmap/home_0"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/textColor_gray"
                android:id="@+id/home_tv0"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:text="@string/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/index_1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_iv1"
                android:layout_gravity="center"
                android:src="@mipmap/find_s0"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/textColor_gray"
                android:id="@+id/home_tv1"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:text="@string/find_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/index_2"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_iv2"
                android:layout_gravity="center"
                android:src="@mipmap/find_t0"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/textColor_gray"
                android:id="@+id/home_tv2"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:text="@string/find_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/index_3"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_iv3"
                android:layout_gravity="center"
                android:src="@mipmap/login_0"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/textColor_gray"
                android:id="@+id/home_tv3"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
