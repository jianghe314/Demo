<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingStart="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/home_school_detail_className"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/textColor_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/home_school_detail_classIntroduce"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/textColor_gray"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/home_school_detail_classPrice"
            android:textSize="@dimen/text_size10"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:background="@drawable/home_school_detail_price"
            android:text="ï¿¥3480"
            android:textColor="@color/textColor_whit"
            android:layout_width="50dp"
            android:layout_height="15dp" />
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>