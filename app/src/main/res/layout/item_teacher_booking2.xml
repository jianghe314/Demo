<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp" android:orientation="horizontal"  android:weightSum="100">
    <View
        android:id="@+id/item_teacher_booking2_colorLine"
        android:background="@color/textColor_red"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_weight="20"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_teacher_booking2_header"
                android:src="@drawable/header"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/item_teacher_booking2_lesson"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/textColor_whit"
                android:background="@drawable/text_background1"
                android:text="科目二"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="79"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_teacher_booking2_sex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/boy" />

            <TextView
                android:id="@+id/item_teacher_booking2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="张三" />

            <TextView
                android:id="@+id/item_teacher_booking2_queke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_background_89cc6f"
                android:text="@string/teacher_studentAbsence"
                android:textColor="@color/text_background_color_aqua" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/clock" />

            <TextView
                android:id="@+id/item_teacher_booking2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="2017-05-02 10:00-12:00" />

            <ImageView
                android:id="@+id/item_teacher_booking2_m"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/item_teacher_booking2_time"
                android:src="@mipmap/teacher_booking_money" />

            <TextView
                android:id="@+id/item_teacher_booking2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/item_teacher_booking2_m"
                android:text="150.00元" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/car" />

            <TextView
                android:id="@+id/item_teacher_booking2_carLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="C1 湘A8888学 捷达" />

            <TextView
                android:id="@+id/item_teacher_booking2_startTrain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_background2"
                android:text="@string/teacher_startTrain"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>