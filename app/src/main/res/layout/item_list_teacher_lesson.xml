<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  android:layout_margin="2dp" android:background="@drawable/text_background5" android:clickable="true">
    <LinearLayout
        android:padding="2dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size12"
            android:id="@+id/item_teacher_lesson_time"
            android:text="7:00-8:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size12"
            android:id="@+id/item_teacher_lesson_price"
            android:layout_marginTop="5dp"
            android:text="科二C1/100元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size12"
            android:id="@+id/item_teacher_lesson_carType"
            android:layout_marginTop="5dp"
            android:text="已约3人 可约0人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>