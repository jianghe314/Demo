<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp" android:weightSum="20" android:padding="5dp">
    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/order_header"
                android:src="@drawable/header"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/order_lesson"
                android:background="@drawable/text_background1"
                android:textColor="@color/textColor_whit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_weight="16"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/order_sex"
                android:layout_centerVertical="true"
                android:src="@mipmap/boy"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/order_name"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size20"
                android:text="张三"
                android:layout_toEndOf="@+id/order_sex"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/textColor_whit"
                android:background="@drawable/text_background3"
                android:text="@string/duty_PickUp"
                android:layout_toEndOf="@+id/order_name"
                android:id="@+id/order_pickUp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/order_clock"
                android:layout_centerVertical="true"
                android:src="@mipmap/clock"
                android:layout_width="17dp"
                android:layout_height="17dp" />
            <TextView
                android:id="@+id/order_date"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:text="2017-02-15"
                android:layout_toEndOf="@+id/order_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/order_phone"
                android:layout_centerVertical="true"
                android:src="@mipmap/phone"
                android:layout_width="18dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_toEndOf="@+id/order_phone"
                android:id="@+id/order_phoneNum"
                android:text="1888888888"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/textColor_whit"
                android:background="@drawable/price_background"
                android:id="@+id/order_price"
                android:text="￥150.00元"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>