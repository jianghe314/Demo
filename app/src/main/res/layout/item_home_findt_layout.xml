<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_home_findt_head"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_home_findt_head"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_home_findt_name"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.kangzhan.student.mUI.RemarkStar
                android:gravity="center_vertical"
                android:id="@+id/item_home_findt_remarkStar"
                app:RemarkStar_Div="3dp"
                app:RemarkStar_Size="10dp"
                app:RemarkStar_Sum="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.kangzhan.student.mUI.RemarkStar>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="5dp"
                    android:drawableStart="@mipmap/location"
                    android:id="@+id/item_home_findt_distance"
                    android:textSize="@dimen/text_size12"
                    android:text="距离10.0KM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_home_findt_from_school"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="@drawable/school_tag_bg"
                android:textColor="@color/colorPrimary"
                android:text="康展驾校"
                android:textSize="@dimen/text_size12"
                android:layout_width="70dp"
                android:layout_height="20dp" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_right"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

</LinearLayout>