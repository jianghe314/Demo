<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kangzhan.student.School.Edu.TestActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/school_edu_remark_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>
    <View
        android:background="@color/line_space_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:weightSum="13"
        android:orientation="horizontal"
        android:background="@drawable/teacher_reward"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/textColor_whit"
                android:text="开始时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/school_remark_setStartT"
                android:textColor="@color/textColor_whit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:background="@mipmap/arrow_right_whit"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/textColor_whit"
                android:text="结束时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/school_remark_setEndT"
                android:textColor="@color/textColor_whit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/textColor_whit"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_margin="10dp"
            android:background="@drawable/choice_background"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/teacher_train_record"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:maxLength="10"
                android:maxLines="1"
                android:textColorHint="@color/textColor_gray"
                android:background="@null"
                android:layout_centerInParent="true"
                android:hint="@string/teacher_train_record_searcher_hint"
                android:id="@+id/school_remark_search_content"
                android:layout_toEndOf="@+id/teacher_train_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/school_remark_Tosearch"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:text="@string/teacher_train_searcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <com.holenzhou.pullrecyclerview.PullRecyclerView
        android:id="@+id/school_remark_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--item为：item_school_edu_remark-->
    </com.holenzhou.pullrecyclerview.PullRecyclerView>
    <!--menu为“item_school_edu_test_menu-->
</LinearLayout>
