<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentStart="true">
        <LinearLayout
           android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <View
                android:id="@+id/train_line"
                android:background="#e64894"
                android:layout_width="5dp"
                android:layout_height="match_parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/train_record_header"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/header"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:src="@mipmap/boy"
                        android:id="@+id/train_record_sex"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/train_record_name"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size20"
                        android:text="张三丰"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/train_record_sex"
                        android:layout_marginStart="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/train_record_clock"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/train_record_time"
                        android:textSize="@dimen/text_size12"
                        android:text="2017-02-15 10:00-12:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/train_record_clock"
                        android:layout_marginStart="8dp" />
                    <ImageView
                        android:id="@+id/train_record_car"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/train_record_time"
                        android:src="@mipmap/car"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/train_record_class"
                        android:textSize="@dimen/text_size12"
                        android:text="科目三C1-1课时"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/train_record_car"
                        android:layout_marginStart="8dp" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"/>
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/train_record_adapter1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColor_red"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/train_record_price"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/train_record_adapter1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColor_red"
                android:text="150.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/train_record_evalu"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>
        <View
            android:background="@color/background_color"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

    </LinearLayout>
</RelativeLayout>