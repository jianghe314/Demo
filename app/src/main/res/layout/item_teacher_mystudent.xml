<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="55dp" android:weightSum="5">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_mystudent_header"
            android:layout_centerInParent="true"
            android:src="@drawable/header"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/teacher_mystudent_iv2"
                android:layout_centerVertical="true"
                android:src="@mipmap/boy"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/teacher_mystudent_name"
                android:layout_toEndOf="@+id/teacher_mystudent_iv2"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/teacher_mystudent_iv"
                android:layout_centerVertical="true"
                android:background="@mipmap/car"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/teacher_mystudent_class"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/teacher_mystudent_iv"
                android:text="C1-科目二合格"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/teacher_mystudent_iv3"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/phone"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:id="@+id/teacher_mystudent_phone"
                android:layout_centerVertical="true"
                android:text="1888888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>