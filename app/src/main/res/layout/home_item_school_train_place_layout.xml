<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/item_home_school_train_place_iv"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_home_school_train_place_name"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/location_arrow"
                android:maxLength="15"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_home_school_train_place_address"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/location"
                android:maxLength="15"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_home_school_train_place_distance"
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/color_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_home_school_train_place_go"
                android:src="@mipmap/go_where"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size16"
                android:layout_below="@+id/item_home_school_train_place_go"
                android:text="@string/go_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>