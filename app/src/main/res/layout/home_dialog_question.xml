<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:paddingTop="30dp"
    android:background="@color/textColor_whit">

    <ImageView
        android:layout_marginStart="80dp"
        android:src="@drawable/broadcast_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/home_dialog_question_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/texColor_Text"
        android:textSize="@dimen/text_size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/home_dialog_question_btn"
        android:textSize="@dimen/text_size16"
        android:text="@string/i_know"
        android:background="@drawable/btnstyle"
        android:textColor="@color/textColor_whit"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />




</LinearLayout>