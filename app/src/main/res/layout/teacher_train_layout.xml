<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/textColor_whit">

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/teacher_train_qdan"
        android:background="@color/textColor_whit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/teacher_train_order"
        android:layout_alignStart="@+id/teacher_train_record" />
    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/teacher_train_order"
        android:background="@color/textColor_whit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/teacher_train_add" />
    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/teacher_train_record"
        android:background="@color/textColor_whit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/teacher_train_add"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp" />
    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/teacher_train_add"
        android:background="@color/textColor_whit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>