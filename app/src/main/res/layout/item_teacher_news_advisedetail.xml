<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/teacher_news_advisedetail_tv1"
            android:layout_margin="10dp"
            android:text="@string/teacher_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/teacher_news_adviseDetail_problemTitle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/teacher_news_advisedetail_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/teacher_news_advisedetail_tv2"
            android:layout_marginLeft="10dp"
            android:text="@string/teacher_news_advisedetail_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/teacher_news_advisedetail_problemContent"
            android:lineSpacingMultiplier="1.2"
            android:layout_margin="10dp"
            android:layout_below="@+id/teacher_news_advisedetail_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>