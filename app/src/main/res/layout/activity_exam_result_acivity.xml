<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/exam_result_background"
    tools:context=".Student.Exam.ExamResultAcivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/exam_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/textColor_whit"
            android:background="@drawable/exam_result_background_circle"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="69dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/exam_result_tv" />
        <TextView
            android:textColor="@color/textColor_whit"
            android:textSize="@dimen/text_size18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_result_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:id="@+id/exam_time_tv" />
        <Button
            android:onClick="goBack"
            android:id="@+id/exam_again"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/textColor_whit"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/exam_btnstyle"
            android:text="重新考试"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_time_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp" />
    </RelativeLayout>



</LinearLayout>
