<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_home_school_detail_list_head"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:paddingStart="10dp"
            android:layout_toEndOf="@+id/item_home_school_detail_list_head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_home_school_detail_list_name"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/textColor_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.kangzhan.student.mUI.RemarkStar
                    android:gravity="center_vertical"
                    app:RemarkStar_Div="2dp"
                    app:RemarkStar_Sum="5"
                    app:RemarkStar_Size="10dp"
                    android:id="@+id/item_home_school_detail_list_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.kangzhan.student.mUI.RemarkStar>
                <TextView
                    android:id="@+id/item_home_school_detail_list_time"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/textColor_black"
                    android:textSize="@dimen/text_size14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_home_school_detail_list_content"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/textColor_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>