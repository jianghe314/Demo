<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kangzhan.student.CompayManage.SlideMenu.CompayChangePsdActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/compay_changePassword_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="原密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:layout_margin="5dp"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="number"
            android:id="@+id/compay_change_psd_old"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:hint="@string/forgetPas_code_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/forgetPas_newPas1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:layout_margin="5dp"
            android:lineSpacingMultiplier="1.3"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="16"
            android:id="@+id/compay_change_psd_new1"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:hint="@string/forgetPas_newPas1_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/forgetPas_newPas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:layout_margin="5dp"
            android:lineSpacingMultiplier="1.3"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="16"
            android:id="@+id/compay_change_psd_new2"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:hint="@string/forgetPas_newPas1_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <Button
        android:id="@+id/compay_change_psd_save"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btnstyle"
        android:textColor="@color/textColor_whit"
        android:text="@string/forgetPas_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
