<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/item_school_edu_stuM_rel"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_school_edu_stuM_choice"
                android:layout_centerInParent="true"
                android:src="@mipmap/student_test_choice"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginStart="2dp"
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_school_edu_stuM_sex"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/girl"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/item_school_edu_stuM_name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/item_school_edu_stuM_sex"
                    android:text="张安"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/item_school_edu_stuM_startTT"
                    android:text="报名日期："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="2017-06-26"
                    android:layout_centerVertical="true"
                    android:id="@+id/item_school_edu_stuM_startT"
                    android:layout_toEndOf="@+id/item_school_edu_stuM_startTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_school_edu_stuM_idm"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/sfz_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_edu_stuM_id"
                    android:layout_marginLeft="10dp"
                    android:text="43013191256957585"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/item_school_edu_stuM_idm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>

</LinearLayout>