<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp">
    <LinearLayout
        android:weightSum="200"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <View
            android:id="@+id/teacher_train_order_colorLine"
            android:layout_weight="2"
            android:background="@color/textColor_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_weight="35"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/teacher_train_order_header"
                    android:layout_centerHorizontal="true"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/teacher_train_order_isId"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/text_background_h_id"
                    android:text="@string/have_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:padding="5dp"
            android:weightSum="3"
            android:layout_weight="163"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/teacher_train_order_sex"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/boy"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/teacher_train_order_name"
                    android:textStyle="bold"
                    android:text="张三三"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/teacher_train_order_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/text_backgroundaque"
                    android:id="@+id/teacher_train_order_pickUp"
                    android:layout_marginLeft="10dp"
                    android:text="要接送"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/teacher_train_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_getOrder_clock"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/clock"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_size12"
                    android:id="@+id/teacher_train_order_time"
                    android:layout_toEndOf="@+id/item_getOrder_clock"
                    android:layout_centerVertical="true"
                    android:text="2017-10-25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_getOrder_location"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/location"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/text_size12"
                    android:id="@+id/teacher_train_order_address"
                    android:layout_marginLeft="2dp"
                    android:layout_toEndOf="@+id/item_getOrder_location"
                    android:layout_centerVertical="true"
                    android:text="长沙市岳麓区麓山南路80号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/teacher_booking_money"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/teacher_train_order_price"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:text="150.00元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/teacher_train_order_absence"
            android:layout_centerVertical="true"
            android:textColor="@color/text_background_color_aqua"
            android:background="@drawable/text_background_89cc6f"
            android:layout_marginEnd="100dp"
            android:layout_alignParentEnd="true"
            android:text="@string/teacher_studentAbsence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/teacher_train_order_startTrain"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/text_background2"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:text="@string/teacher_startTrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>