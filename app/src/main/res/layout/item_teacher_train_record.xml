<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="101dp">

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <View
            android:id="@+id/teacher_train_record_item_colorLine"
            android:background="@color/textColor_red"
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:padding="5dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teacher_train_record_item_header"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <TextView
                android:id="@+id/item_record_isId"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textColor_whit"
                android:background="@drawable/text_background_h_id"
                android:layout_below="@+id/teacher_train_record_item_header"
                android:text="科二"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:padding="5dp"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_record_sex"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/boy"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView

                    android:id="@+id/item_record_name"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:text="张三三"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/item_record_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/text_backgroundaque"
                    android:id="@+id/item_record_pickUp"
                    android:layout_marginLeft="10dp"
                    android:text="要接送"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/item_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_record_price"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/textColor_whit"
                    android:layout_centerVertical="true"
                    android:background="@drawable/price_background"
                    android:layout_alignParentEnd="true"
                    android:text="￥200"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_record_clock"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/clock"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/item_record_date"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/item_record_clock"
                    android:layout_centerVertical="true"
                    android:text="2017-10-25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_record_location"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/location"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:maxLines="1"
                    android:id="@+id/item_record_address"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/item_record_location"
                    android:layout_centerVertical="true"
                    android:text="长沙市岳麓区麓山南路80号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_teacher_trainRecord_eval1"
                    android:layout_marginEnd="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="已点评"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/text_background2"
                    android:id="@+id/item_teacher_trainRecord_eval0"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="点评"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>