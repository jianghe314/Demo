<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:weightSum="3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student.Train.EvalutionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/hour_evalu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:background="@color/textColor_whit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:text="教练："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/hour_evalu_name"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="0.8dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColor"
                    android:text="训练阶段："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" />
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/hour_eval_lesson"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:text="练车地点："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/hour_evalu_address"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="0.8dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/textColor"
                    android:text="价格："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/hour_eval_price"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_marginStart="10dp" />

            </RelativeLayout>

        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:text="教练车牌："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/hour_evalu_car_label"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="0.8dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/textColor"
                    android:text="状态："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />
                <TextView
                    android:id="@+id/hour_eval_stastu"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_marginStart="10dp" />

            </RelativeLayout>

        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColor"
                android:text="练车时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/hour_evalu_time"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:background="@color/textColor_whit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/evalu_r1"
            android:text="对此次课程进行评价"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.kangzhan.student.Student.mutils.StarBar
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/evalu_r1"
            android:id="@+id/hour_starBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ratingbar:starEmpty="@drawable/heart0"
            ratingbar:starFill="@drawable/heart1"
            ratingbar:starDistance="5dp"
            ratingbar:starCount="5"
            ratingbar:starSize="25dp" />
        <TextView
            android:text="0.0分"
            android:id="@+id/hour_evalu_value"
            android:textColor="@color/textColor_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hour_starBar"
            android:layout_toEndOf="@+id/hour_starBar"
            android:layout_marginStart="14dp" />
        <EditText
            android:padding="10dp"
            android:gravity="top"
            android:maxLength="250"
            android:id="@+id/hour_eval_content"
            android:hint="评价内容"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_gray_background"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_below="@+id/hour_starBar"
            android:layout_alignStart="@+id/hour_starBar" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:layout_centerInParent="true"
            android:id="@+id/hour_evalu_publish"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnstyle"
            android:textColor="@color/textColor_whit"
            android:textSize="@dimen/text_size18"
            android:text="发布"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
