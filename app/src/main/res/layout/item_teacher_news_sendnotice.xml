<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/teacher_send_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/teacher_news_sendNotice_addObject"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/add"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kangzhan.student.mUI.mLableLayout
            android:id="@+id/teacher_news_sendNotice_toMan"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.kangzhan.student.mUI.mLableLayout>

    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/teacher_news_tv2"
            android:layout_centerVertical="true"
            android:text="@string/teacher_title_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/teacher_news_sendNotice_title"
            android:maxLines="1"
            android:maxLength="20"
            android:background="@null"
            android:layout_toEndOf="@+id/teacher_news_tv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/teacher_news_tv3"
            android:text="@string/teacher_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:maxLength="150"
            android:id="@+id/teacher_news_sendNotice_content"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.3"
            android:background="@null"
            android:layout_below="@+id/teacher_news_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>