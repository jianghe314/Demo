<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kangzhan.student.School.SlideMenu.Add_Account">

    <android.support.v7.widget.Toolbar
        android:id="@+id/school_add_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_n"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/school_add_account_name"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l1"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_p"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:inputType="phone"
                        android:id="@+id/school_add_account_phone"
                        android:hint="请输入手机号码"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l2"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_i"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/school_add_account_id"
                        android:hint="请输入身份证号码"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l3"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_m"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_psd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/school_add_account_mima"
                        android:hint="请输入密码"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l4"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_em"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:inputType="textEmailAddress"
                        android:id="@+id/school_add_account_email"
                        android:hint="请输入邮箱"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_9"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_a"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/school_add_account_address"
                        android:hint="省市区"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l5"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_d"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/school_add_account_detail"
                        android:hint="请输入详细地址"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l6"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_w"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_wc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/school_add_account_wx"
                        android:hint="请输入微信"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l7"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_q"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/school_add_account_qq"
                        android:hint="请输入QQ"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l8"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/school_add_account_o"
                        android:layout_centerVertical="true"
                        android:text="@string/school_add_account_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:id="@+id/school_add_account_other"
                        android:hint="备注"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/school_add_account_l10"
                android:background="@color/color_line"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>

            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/school_add_account_btn_save"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btnstyle"
                    android:textColor="@color/textColor_whit"
                    android:text="保存"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
