<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="81dp" android:weightSum="20">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:visibility="gone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_school_training_record_choice"
                android:layout_centerInParent="true"
                android:src="@mipmap/student_test_choice"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
        <LinearLayout
            android:padding="4dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_weight="17"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/item_school_training_record_sex"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/girl"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/item_school_training_record_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/item_school_training_record_sex"
                    android:layout_centerVertical="true"
                    android:text="张娜三"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_training_record_pickUp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/item_school_training_record_name"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/text_backgroundaque"
                    android:text="要接送"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_school_training_record_price"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:textColor="@color/textColor_whit"
                    android:background="@drawable/price_background"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="80dp"
                    android:layout_height="23dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/item_school_training_record_ll"
                    android:layout_centerVertical="true"
                    android:text="课程："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="17-05-26 10:00-12:00 张教练 2课时"
                    android:layout_toEndOf="@+id/item_school_training_record_ll"
                    android:layout_centerVertical="true"
                    android:id="@+id/item_school_training_record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>
</LinearLayout>