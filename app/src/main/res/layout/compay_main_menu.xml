<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="55dp" android:weightSum="4" android:background="#ffffff">
    <View
        android:background="#949494"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/compay_r1"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/compay_title_iv1"
                android:background="@mipmap/compay_mine"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/compay_title_tv1"
                android:layout_marginTop="2dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/compay_title_iv1"
                android:text="@string/compay_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/compay_r2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/compay_title_iv2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/teacher_exam0" />

            <TextView
                android:id="@+id/compay_title_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/compay_title_iv2"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:text="@string/compay_title2" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/compay_r3"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/compay_title_iv3"
                android:background="@mipmap/compay_money"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/compay_title_tv3"
                android:layout_marginTop="2dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/compay_title_iv3"
                android:text="@string/compay_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/compay_r4"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/compay_title_iv4"
                android:src="@mipmap/compay_info"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/compay_title_tv4"
                android:layout_marginTop="2dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/compay_title_iv4"
                android:text="@string/compay_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>