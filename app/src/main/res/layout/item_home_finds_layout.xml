<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="81dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/item_home_finds_iv"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/item_home_finds_iv"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/textColor_black"
                android:textSize="@dimen/text_size16"
                android:id="@+id/item_home_finds_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.kangzhan.student.mUI.RemarkStar
                android:gravity="center_vertical"
                android:id="@+id/item_home_finds_remarkStar"
                app:RemarkStar_Div="2dp"
                app:RemarkStar_Sum="5"
                app:RemarkStar_Size="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.kangzhan.student.mUI.RemarkStar>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_home_finds_address_tv"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="@dimen/text_size14"
                    android:text="共有2个训练场"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow_right"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
</LinearLayout>